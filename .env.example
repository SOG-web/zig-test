# Environment Configuration for VineeID Vendors API

# Server Configuration
SERVER_PORT=8082
ENVIRONMENT=development
PUBLIC_HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=user
DB_PASSWORD=password
DB_NAME=auth_server
DB_POOL_SIZE=10

# ============================================================
# CORS Configuration
# ============================================================
# Allowed origins (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:4200,http://localhost:3000,http://localhost:4300,

# Allowed headers
CORS_HEADERS=Content-Type,Authorization,RT-Authorization

# Allowed HTTP methods
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH

# Max age for preflight cache (in seconds)
CORS_MAX_AGE=86400

# Allow credentials (cookies, authorization headers)
CORS_CREDENTIALS=true

AUTH_SERVER_URL="http://localhost:8080/api"
AUTH_SERVER_API_KEY="trrghj"

# Redis Configuration
# NOTE: Port 6380 to avoid conflicts with user API (which uses 6379)
REDIS_ADDRESS=redis:6379
REDIS_PASSWORD=
REDIS_DB=1

# Storage Configuration
STORAGE_BACKEND=local
STORAGE_BASE_DIR=./uploads
STORAGE_PUBLIC_BASE_URL="http://localhost:8082/api/v1/files/download"

# S3/MinIO Configuration (for production file storage)
S3_ENDPOINT=localhost:9000
S3_REGION=us-east-1
